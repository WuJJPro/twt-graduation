<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.graduation.dao.UserDao">
    <select id="getUser" resultType="User">
        select * from user where id = #{id}
    </select>
    <insert id="createUser">
        insert ignore into user values(#{id},"[]","[]",0)
    </insert>
    <update id="addTapNumber">
        update user set TapNumber = TapNumber+#{number} where id = #{userid}
    </update>
    <update id="updateLike">
        update user set likeList = #{content} where id = #{userid}
    </update>
    <update id="updatedisLike">
        update user set dislikeList = #{content} where id = #{userid}
    </update>


</mapper>